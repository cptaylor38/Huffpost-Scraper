<div class="jumbotron jumbotron-fluid headerJumbo">
    <div class="container">
        <h1 id='siteTitle' style='font-size: 48px;'>Huffpost Scraper </h1>
        <large style='font-size: 22px;'>Scrape the articles of huffpost.com.</large>
        <br>
        <button type='button' id='scrapeBtn' style='margin-top: 20px;'>Scrape</button>
    </div>

</div>

<div class='container-fluid' id='postsArea'>

    {{#each articles}}
    <div class='col-lg-3 col-md-6 col-sm-12 card' id='card-{{id}}'>
        <a href='{{link}}' target='_blank'>{{title}}</a>
        <img src='{{photo}}'>
        <p>{{description}}</p>
        <span>
            <button type='button' id='addComment{{id}}'>
                Add a comment.
            </button>
            <button type='button' id='deletePost{{id}}'>
                Remove this article.
            </button>
        </span>
    </div>
    {{/each}}

</div>